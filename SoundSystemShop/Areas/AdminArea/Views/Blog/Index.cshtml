@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-9 grid-margin stretch-card">
        <div class="card mt-5">
            <div class="card-body">
                <h4 class="card-title">Blog Table</h4>
                <a class="btn btn-success" asp-controller="blog" asp-action="create">Add Blog</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Author</th>
                                <th>CreationDate</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img alt="" src="~/assets/img/blog/@item.ImgUrl" width="100" height="100" />
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Author</td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a class="btn btn-secondary" asp-controller="blog" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-primary" asp-controller="blog" asp-action="update" asp-route-id="@item.Id">Update</a>
                                        <a class="btn btn-danger" asp-controller="blog" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>