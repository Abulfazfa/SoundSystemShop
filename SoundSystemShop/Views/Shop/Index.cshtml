@model PaginationVM<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shop</h4>
                        <div class="breadcrumb__links">
                            <a href="./index.html">Home</a>
                            <span>Shop</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__categories">
                                                <ul class="nice-scroll">
                                                @foreach (var item in ViewBag.ShopProductCategory)
                                                {
                                                    <li><a href="#">@item.Name</a></li>
                                                }
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseThree">Filter Price</a>
                                    </div>
                                    <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__price">
                                                <ul id="sidebarPrice">
                                                    
                                                    
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right">
                                    <p>Sort by Price:</p>
                                <select id="sortOptions">
                                        <option value="lth">Low To High</option>
									    <option value="htl">High To Low</option>
                                        
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (var product in Model.Items)
                        {
                        <div class="product col-lg-4 col-md-6 swiper-slide">
                            <a asp-controller="shop" asp-action="product" asp-route-id="@product.Id">
                                <div class="product-img d-flex justify-content-center mt-5 mb-4">
                                    <img class="img-fluid w-100"
                                     src="~/assets/img/product/@product.Images.FirstOrDefault().ImgUrl"
                                     alt="" style="height:262.5px;">
                                </div>
                                <div class="product-name">
                                    <p class="text-center fw-bold text-dark mb-4 ">@product.Name</p>
                                </div>
                                <div class="rating" style="    width: fit-content;
    margin: auto;">
                                    @for (int i = 0; i < product.ProductRating; i++)
                                    {
                                        <i class="fa-solid fa-star text-warning"></i>
                                    }
                                </div>
                                <div class="product-price d-flex justify-content-around align-items-center">
                                    <div class="discount">
                                        @if (product.InDiscount)
                                        {
                                            <span style="text-decoration:line-through solid red;font-weight:normal"
                                          class="text-dark">
                                                <small class="azn_span text-dark">$</small> @product.Price.00
                                            </span>
                                            <br>
                                            <span class="nprice text-danger fw-bold" id="price-1060446">
                                                <small class="azn_span fw-normal">$</small> @product.DiscountPrice.00
                                            </span>
                                        }
                                        else
                                        {
                                            <span style="font-weight:normal"
                                          class="text-dark">
                                                <small class="azn_span text-dark">$</small> @product.Price.00
                                            </span>
                                        }

                                    </div>
                                    <a class="btn-add-to-cart mt-2 border-0 text-light minusIcon" data-id="@product.Id"
                                   style="background-color: black; font-size: 14px; font-weight: bold; padding: 5px 13px; border-radius: 3px; cursor:pointer;">
                                        Add Basket
                                    </a>
                                </div>
                            </a>
                        </div>
                        }
                    </div>
                <div class="row">
                    <nav aria-label="..." style="margin:auto;">
                        <ul class="pagination pagination-lg">
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i?"active": "")">
                                    <a asp-action="index" asp-route-page="@i">
                                        <span class="page-link">@i</span>
                                    </a>
                                </li>

                            }
                        </ul>
                    </nav>
                </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Section End -->
